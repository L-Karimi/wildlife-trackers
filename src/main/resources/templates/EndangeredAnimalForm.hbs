{{#partial "content"}}
    <br><br>
    <div class="endangeredAnimal">
        <form action="/endangeredAnimal" method="POST">
            <div class="form-group">
                <label >Choose Animal Name </label>
                <input type="text" class="form-control required" name="animalName" id="animalName" placeholder="Enter animals name..." required>
            </div>
            <br>
            <div>
            <label >Choose Animal Age </label>
            <select class="form-control form-control-sm" name="animalCondition" id="animalCondition">
                <option value="Newborn">Newborn</option>
                <option value="Young">Young</option>
                <option value="Adult">Adult</option>
            </select><br><br>
        </div>
            <div class="form-group">
                <label >Choose Animal Condition </label>
            <br><br>
            <select class="form-control form-control-sm" name="animalGroupAge" id="animalGroupAge">
                <option value="Healthy">Healthy</option>
                <option value="Ill">Ill</option>
                <option value="Okay">Okay</option>
            </select><br><br>
            </div>

            <button type="submit" class="btn btn-success">Add your Tally </button>
        </form>
    </div>
{{/partial}}
